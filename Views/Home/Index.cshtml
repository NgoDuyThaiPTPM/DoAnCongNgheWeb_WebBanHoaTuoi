@using WEB_BANHOATUOI.Models;
@model PagedList.PagedList<WEB_BANHOATUOI.Models.HOA>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <p class="item-group"></p>
    <div class="row text-center">
        @foreach (var a in Model)
	{
            <div class="col-md-3 col-6 border-gray" style="border-radius:20px 20px; border-color:white; background-color:none">
                <br />
            <p class ="div-image"><a href="@Url.Action("ChiTiet", "Home", new { id = @a.MAHOA})"><img class="item-image" height="300px" width="100%" style="border-radius:20px 20px" src="~/Hinh/@a.ANHBIA" /></a></p>
                <h4 class="item-name" style="color:hotpink"> @a.TENHOA </h4>
                        <p class="gia" style="color:white"><h3 style="color:red">@String.Format("{0:0,0}", a.GIABAN) VNĐ</h3></p>
            <button class="btn btn-danger btn-sm" ><i class="fa fa-shopping-cart" style="font-size:24px" ><a class="btn btn-danger btn-sm" href="@Url.Action("ThemGioHang", "GioHang", new { @ma = @a.MAHOA, @strUrl = Request.Url.ToString()})">Mua</a></i></button>
            <br />
            <br />
        </div>
            <br />
	}
    </div>
</div>
<br />
<div class="container">
<p style="color:blue; text-align:center">Trang@(Model.PageCount < Model.PageNumber ?0: Model.PageNumber)/@Model.PageCount:</p>
<div class="pagination justify-content-center">
       @Html.PagedListPager(Model, page => Url.Action("Index", new {page = page}))
</div>

</div>
<link href="~/Content/bootstrap4.0/css/PhanTrang.css" rel="stylesheet" />

