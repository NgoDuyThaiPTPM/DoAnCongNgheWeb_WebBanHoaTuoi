@model WEB_BANHOATUOI.Models.CHUDE
@using WEB_BANHOATUOI.Models;
@{
    ViewBag.Title = "XoaChuDe";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container">
    <h5 style="text-align:center">XÁC NHẬN XÓA CHỦ ĐỀ</h5>
    <div>
        <dl>
            <dt>Mã Chủ đề</dt>
            <dd>
                @Html.DisplayFor(model => model.MACHUDE)
            </dd>
            <dt>Tên Chủ Đề</dt>
            <dd>
                @Html.DisplayFor(model => model.TENCHUDE)
            </dd>
        </dl>
    </div>
    <div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken();
            <div class="form-actions no-color">
                <input type="submit" value="Xóa" class="btn btn-danger" />
                @Html.ActionLink("Trở Về", "QLChuDe", new { @class="btn btn-warning"})
            </div>
        }
    </div>
</div>

