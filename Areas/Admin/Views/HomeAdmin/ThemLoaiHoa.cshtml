@{
    ViewBag.Title = "ThemLoaiHoa";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@using WEB_BANHOATUOI.Models;
@model WEB_BANHOATUOI.Models.LOAI
<div class="container">
    <h5 style="text-align:center">THÊM HOA MỚI</h5>
    @using (Html.BeginForm("ThemLoaiHoa", "HomeAdmin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true)

            <div class="form-group">
                <h5 class="control-label col-md-2">TÊN LOẠI</h5>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TENLOAI)
                    @Html.ValidationMessageFor(model => model.TENLOAI)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Thêm mới" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Trở về trang QL Chủ Đề", "QLLoaiHoa", "HomeAdmin", new { @class = "btn btn-warning" })
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
